<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_purchase2_document">
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <h2 t-if="o.state != 'draft'">Acta de conformidad N째<span t-field="o.accordance"/></h2>
            <h2 t-if="o.state == 'draft'">Acta de Conformidad N째<span t-field="o.accordance"/></h2>

            <div class="row">
                    <div class="col-xs-6">
                        <strong>Proveedor:</strong>
                        <span t-field="o.partner_id"/>
                    </div>
                    <div class="col-xs-5">
                        <strong>N째 Orden de Compra:</strong>
                        <span t-field="o.name"/>
                    </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Contacto:</strong>
                    <span t-field="o.contact_id.name"/>
                </div>
                <div class="col-xs-5">
                    <strong>N째 OP:</strong>
                    <span t-field="o.sale_id"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Proyecto:</strong>
                    <span t-field="o.project_id"/>
                </div>
                <div class="col-xs-5">
                    <strong>Aprobado por:</strong>
                    <span t-field="o.responsible_id"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Cargo:</strong>
                    <span t-field="o.department_id"/>
                </div>
            </div>

            <br/>
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Descripcion</strong></th>
                        <th><strong>Centro de costo</strong></th>
                        <th class="text-right"><strong>Cantidad</strong></th>
                        <th class="text-right"><strong>Precio unitario</strong></th>
                        <th class="text-right"><strong>Total</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-esc="line.analytics_id.name"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Impuestos</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.notes"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Fecha inicio:</strong>
                    <span t-field="o.date_start"/>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Fecha final:</strong>
                    <span t-field="o.date_finish"/>
                </div>
            </div>
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_purchase2_order">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'inet.report_purchase2_document')"/>
        </t>
    </t>
</template>
</data>
</odoo>
