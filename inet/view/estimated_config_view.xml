<odoo>
    <data>
        <record model="ir.ui.view" id="estimated_config_form">
                <field name="name">estimated.config.form</field>
                <field name="model">estimated.config</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet string="Parámetros de estimación">
                            <div class="oe_title">
                                        <h1>
                                            <field name="name" required="1"/>
                                        </h1>
                                    </div>
                            <group colspan="1" col="2">
                                        <field name="active_estimate"/>
                                    </group>
                            <group name="studio_group_2L08r">
                                <group name="studio_group_2L08r_left">
                                    <field name="profitability_1"/>
                                    <field name="profitability_2"/>
                                    <field name="profitability_3"/>
                                    <field name="profitability_4"/>
                                </group>
                            </group>
                            <group colspan="2">
                                    <group colspan="1" col="2">
                                        <field name="commission_1"/>
                                        <field name="commission_2"/>
                                        <field name="commission_3"/>
                                        <field name="commission_4"/>
                                    </group>
                            </group>
                        </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </form>
                </field>
        </record>

        <record model="ir.ui.view" id="estimated_config_tree">
            <field name="name">estimated.config.tree</field>
            <field name="model">estimated.config</field>
            <field name="arch" type="xml">
                <tree string="Parámetros de estimación">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="estimated_config_action">
            <field name="name">Configuración Estimación</field>
            <field name="res_model">estimated.config</field>
            <field name="view_mode">tree,form</field>
        </record>

    <menuitem id="estimated_config_menu" parent="sale.menu_sale_config" action='inet.estimated_config_action' name="Parámetros de Estimación"  sequence="40"/>

    </data>
</odoo>