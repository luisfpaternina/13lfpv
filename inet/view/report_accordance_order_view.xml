<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_accordance_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h2 class="text-center">Acta de conformidad N°<span t-field="o.name"/></h2>
                    <div class="row text-center">
                            <strong>N° Orden de Compra:</strong>
                            <span t-field="o.purchase_id"/>
                    </div>
                    <div class="row text-center">
                            <strong>N° Orden de Pedido:</strong>
                            <span t-field="o.sale_id"/>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Proveedor:</strong>
                            <span t-field="o.purchase_id.partner_id"/>
                        </div>
                        <div class="col-xs-6">
                            <strong>Proyecto:</strong>
                            <span t-field="o.purchase_id.project_id"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Contacto:</strong>
                            <span t-field="o.purchase_id.contact_id.name"/>
                        </div>
                        <div class="col-xs-5">
                            <strong>Aprobado por:</strong>
                            <span t-field="o.employee_id.name"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Trabajo realizado:</strong>
                            <span t-field="o.work_done"/>
                        </div>
                        <div class="col-xs-5">
                            <strong>Cargo:</strong>
                            <span t-field="o.employee_id.job_id"/>
                        </div>
                    </div>

                    <br/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th><strong>Descripcion</strong></th>
                                <th><strong>Centro de costo</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                                <th class="text-right"><strong>Precio unitario</strong></th>
                                <th class="text-right"><strong>Total</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.purchase_id.order_line" t-as="line">
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td>
                                    <span t-esc="line.analytics_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.purchase_id.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Subtotal</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.purchase_id.amount_untaxed"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.purchase_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Impuestos</td>
                                    <td class="text-right">
                                        <span t-field="o.purchase_id.amount_tax"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.purchase_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.purchase_id.amount_total"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.purchase_id.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Fecha inicio:</strong>
                            <span t-field="o.date_start"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <strong>Fecha final:</strong>
                            <span t-field="o.date_stop"/>
                        </div>
                    </div>
                    <br/>

                    <div class="row" t-if="o.document_ids">
                        <div class="col-xs-6">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Documentos Entregados</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.document_ids" t-as="t">
                                        <td><span t-field="t.name"/></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <p t-if="o.others">
                        <strong>Otros:</strong>
                        <span t-field="o.others"/>
                    </p>
                </div>
            </t>
        </template>
        <template id="report_accordance_order">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'purchase_id.partner_id.lang', 'inet.report_accordance_document')"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
