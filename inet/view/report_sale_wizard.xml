<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_sale_wizard_form" model="ir.ui.view">
            <field name="name">Reporte de Ventas</field>
            <field name="model">report.sale</field>
            <field name="arch" type="xml">
                <form string="Reporte de ventas">
                    <field name="company_id" invisible="True"/>
                    <group>
                        <label for="period_start" string="Periodos"/>
                        <div>
                            <field name="period_start" class="oe_inline"/> - 
                            <field name="period_end" class="oe_inline"/>
                        </div>
                            <field name="user_id"/>
                            <field name="currency_id"/>
                    </group>
                    <footer>
                        <button name="report_sale_xls" string="Imprimir" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_sale_action" model="ir.actions.act_window">
            <field name="name">Reporte de Ventas</field>
            <field name="res_model">report.sale</field>
            <!--<field name="src_model">report.sale</field>
            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Reporte venta" id="report_sale_menu" parent="sale.menu_sale_config" action="report_sale_action" sequence="16"/>
        <!--base.next_id_64-->
    </data>
</odoo>
