<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_purchase_wizard_form" model="ir.ui.view">
            <field name="name">Reporte de Compras</field>
            <field name="model">report.purchase</field>
            <field name="arch" type="xml">
                <form string="Reporte de compras">
                    <field name="company_id" invisible="True"/>
                    <group>
                        <field name="sale_id"/>
                    </group>
                    <footer>
                        <button name="purchase_xls" string="Imprimir" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_purchase_action" model="ir.actions.act_window">
            <field name="name">Reporte de Compras</field>
            <field name="res_model">report.purchase</field>
            <field name="src_model">report.purchase</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Reporte compra" id="report_purchase_menu" parent="base.next_id_73" action="report_purchase_action" sequence="4"/>
    </data>
</odoo>
