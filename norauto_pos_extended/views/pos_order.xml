<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>
        <record id="view_pos_order_venta_actual_tree" model="ir.ui.view">
            <field name="name">inherit.pos.order.tree</field>
            <field name="model">pos.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="venta_actual" create="false" edit="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_pos_order_venta_actual_graph" model="ir.ui.view">
            <field name="name">inherit.pos.order.graph</field>
            <field name="model">pos.order</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <graph string="Point of Sale Orders">
                    <field name="name" modifiers="{&quot;readonly&quot;: true, &quot;required&quot;: true}"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_pos_order_venta_actual">
            <field name="name">Venta actual</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">tree,dashboard</field>
            <field name="view_id" ref="norauto_pos_extended.view_pos_order_venta_actual_tree"/>
            <field name="domain">[('date_order','>=',((context_today())).strftime('%Y-%m-%d 00:00:00')), ('date_order', '&lt;=',((context_today())).strftime('%Y-%m-%d 23:59:59'))]</field>
            <field name="context">{'graph': {'graph_measure': 'price_total', 'graph_mode': 'line', 'graph_groupbys': ['date:day', 'location_id']}, 'pivot': {'pivot_measures': ['order_id', 'product_qty', 'price_total'], 'pivot_column_groupby': ['date:month'], 'pivot_row_groupby': ['product_categ_id']}, 'timeRangeMenuData': {'comparisonField': 'date', 'timeRange': "['&amp;',('date', '>=', (datetime.datetime.combine(context_today() + relativedelta(day=1), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S')),('date', '&lt;', (datetime.datetime.combine(context_today() + relativedelta(day=1, months=1), datetime.time(0,0,0)).to_utc()).strftime('%Y-%m-%d %H:%M:%S'))]", 'timeRangeDescription': 'Este mes', 'comparisonTimeRange': '[]'}}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">No hay datos
                </p>
            </field>
        </record>

        <menuitem 
            id="pos_order_venta_Actual"
            name="Venta actual"
            parent="point_of_sale.menu_point_rep"
            action="action_view_pos_order_venta_actual"/>

    </data>
</odoo>